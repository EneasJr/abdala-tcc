<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bd_primus</property>
    <property name="hibernate.connection.username">sistema</property>
    <property name="hibernate.connection.password">syspass</property>
    
    <mapping class="tcc.model.Cliente"></mapping>
    <mapping class="tcc.model.EnderecoCliente"></mapping>
    <mapping class="tcc.model.Login"></mapping>
    <mapping class="tcc.model.Administrador"></mapping>
  </session-factory>
</hibernate-configuration>
